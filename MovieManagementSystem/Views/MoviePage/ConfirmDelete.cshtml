@model MovieManagementSystem.Models.MovieDto

<div class="container mt-4">
    <!-- Card -->
    <div class="card shadow-lg border-0 rounded-4"
         style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
        <!-- Card Header -->
        <div class="card-header text-center"
             style="background: rgba(255, 0, 0, 0.2); border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
            <h4 class="mb-0 text-light">Confirm Deletion?</h4>
        </div>

        <!-- Card Body -->
        <div class="card-body">
            <h5 class="text-center text-light">Are you sure you want to delete this movie?</h5>
            <p class="text-center text-muted">This action cannot be undone.</p>
            <p class="text-center text-light">@Model.MovieTitle</p>

            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-borderless"
                       style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
                    <tbody>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Name</th>
                            <td class="text-light">@Html.DisplayFor(model => model.MovieTitle)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Release Date</th>
                            <td class="text-light">@Html.DisplayFor(model => model.MovieReleaseDate)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Duration</th>
                            <td class="text-light">@Html.DisplayFor(model => model.MovieDuration)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Description</th>
                            <td class="text-light">@Html.DisplayFor(model => model.MovieDescription)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Budget</th>
                            <td class="text-light">$ @Html.DisplayFor(model => model.MovieBudget)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Box Office</th>
                            <td class="text-light">$ @Html.DisplayFor(model => model.MovieBoxOfficeCollection)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Rating</th>
                            <td class="text-light">@Html.DisplayFor(model => model.MovieRating)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Award Nominations</th>
                            <td class="text-light">@Html.DisplayFor(model => model.MovieAwardNomination)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Award Wins</th>
                            <td class="text-light">@Html.DisplayFor(model => model.MovieAwardWin)</td>
                        </tr>
                        <tr>
                            <th class="text-light" style="background: rgba(255, 255, 255, 0.1);">Studio</th>
                            <td class="text-light">@Html.DisplayFor(model => model.MovieStudioName)</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Buttons -->
            <form method="POST" action="/MoviePage/Delete/@Model.MovieID" class="text-center mt-4">
                <input type="hidden" asp-for="@Model.MovieID" />
                <button type="submit" class="btn btn-danger px-4"
                        style="background: rgba(255, 0, 0, 0.2); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                    Confirm Delete
                </button>
                <a href="/MoviePage/Index" class="btn btn-secondary px-4"
                   style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}