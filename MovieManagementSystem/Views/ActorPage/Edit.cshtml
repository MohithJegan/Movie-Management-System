@model MovieManagementSystem.Models.ActorDto

@{
    ViewData["Title"] = "Edit Actor";
}

<div class="container mt-4">
    <!-- Card -->
    <div class="card shadow-lg border-0 rounded-4"
         style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
        <!-- Card Header -->
        <div class="card-header text-center"
             style="background: rgba(0, 123, 255, 0.2); border-bottom: 1px solid rgba(255, 255, 255, 0.2);">
            <h3 class="mb-0 text-light">Edit Actor</h3>
        </div>

        <!-- Card Body -->
        <div class="card-body">
            <form asp-action="Update" asp-route-id="@Model.ActorId">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="ActorId" />

                <div class="row g-3">
                    <!-- Full Name -->
                    <div class="col-md-6">
                        <label asp-for="ActorName" class="form-label fw-bold text-light">Full Name</label>
                        <input asp-for="ActorName" class="form-control" placeholder="Enter actor's full name"
                               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                        <span asp-validation-for="ActorName" class="text-danger"></span>
                    </div>

                    <!-- Date of Birth -->
                    <div class="col-md-6">
                        <label asp-for="ActorDOB" class="form-label fw-bold text-light">Date of Birth</label>
                        <input asp-for="ActorDOB" type="date" class="form-control"
                               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                        <span asp-validation-for="ActorDOB" class="text-danger"></span>
                    </div>

                    <!-- Birthplace -->
                    <div class="col-md-6">
                        <label asp-for="ActorBirthPlace" class="form-label fw-bold text-light">Birthplace</label>
                        <input asp-for="ActorBirthPlace" class="form-control" placeholder="Enter birthplace"
                               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                        <span asp-validation-for="ActorBirthPlace" class="text-danger"></span>
                    </div>

                    <!-- Gender -->
                    <div class="col-md-6">
                        <label asp-for="ActorGender" class="form-label fw-bold text-light">Gender</label>
                        <select asp-for="ActorGender" class="form-select"
                                style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                            <option value="">Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="ActorGender" class="text-danger"></span>
                    </div>

                    <!-- Nationality -->
                    <div class="col-md-6">
                        <label asp-for="ActorNationality" class="form-label fw-bold text-light">Nationality</label>
                        <input asp-for="ActorNationality" class="form-control" placeholder="Enter nationality"
                               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                        <span asp-validation-for="ActorNationality" class="text-danger"></span>
                    </div>

                    <!-- Role -->
                    <div class="col-md-6">
                        <label asp-for="ActorRole" class="form-label fw-bold text-light">Role</label>
                        <input asp-for="ActorRole" class="form-control" placeholder="Enter role (e.g., Lead, Supporting)"
                               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                        <span asp-validation-for="ActorRole" class="text-danger"></span>
                    </div>

                    <!-- Awards Won -->
                    <div class="col-md-6">
                        <label asp-for="ActorAwardWon" class="form-label fw-bold text-light">Awards Won</label>
                        <input asp-for="ActorAwardWon" class="form-control" placeholder="Enter awards won"
                               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                        <span asp-validation-for="ActorAwardWon" class="text-danger"></span>
                    </div>

                    <!-- Debut Year -->
                    <div class="col-md-6">
                        <label asp-for="ActorDebutYear" class="form-label fw-bold text-light">Debut Year</label>
                        <input asp-for="ActorDebutYear" type="number" class="form-control" placeholder="Enter debut year"
                               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                        <span asp-validation-for="ActorDebutYear" class="text-danger"></span>
                    </div>

                    <!-- Net Worth -->
                    <div class="col-md-6">
                        <label asp-for="ActorNetWorth" class="form-label fw-bold text-light">Net Worth ($)</label>
                        <input asp-for="ActorNetWorth" type="text" class="form-control" placeholder="Enter net worth"
                               style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;" />
                        <span asp-validation-for="ActorNetWorth" class="text-danger"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary"
                       style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                        Back to List
                    </a>
                    <button type="submit" class="btn btn-success px-4"
                            style="background: rgba(40, 167, 69, 0.2); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}