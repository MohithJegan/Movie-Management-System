@model MovieManagementSystem.Models.StudioDto

@{
    ViewData["Title"] = "Add New Studio";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-uppercase fw-bold text-light">Add New Studio</h2>
        <a asp-action="Index" class="btn btn-outline-light px-4 py-2">
            Back to List
        </a>
    </div>

    <!-- Card -->
    <div class="card shadow-lg p-4 rounded-4 border-0"
         style="background: rgba(255, 255, 255, 0.1); backdrop-filter: blur(10px); border: 1px solid rgba(255, 255, 255, 0.2);">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>

            <!-- Studio Name -->
            <div class="mb-3">
                <label asp-for="StudioName" class="form-label fw-semibold text-light">Studio Name</label>
                <input asp-for="StudioName" class="form-control shadow-sm"
                       style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;"
                       placeholder="Enter studio name" />
                <span asp-validation-for="StudioName" class="text-danger"></span>
            </div>

            <!-- Country -->
            <div class="mb-3">
                <label asp-for="StudioCountry" class="form-label fw-semibold text-light">Country</label>
                <input asp-for="StudioCountry" class="form-control shadow-sm"
                       style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;"
                       placeholder="Enter country" />
                <span asp-validation-for="StudioCountry" class="text-danger"></span>
            </div>

            <!-- Established Year -->
            <div class="mb-3">
                <label asp-for="StudioEstablishedYear" class="form-label fw-semibold text-light">Established Year</label>
                <input asp-for="StudioEstablishedYear" class="form-control shadow-sm"
                       style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;"
                       placeholder="Enter year (e.g., 1995)" />
                <span asp-validation-for="StudioEstablishedYear" class="text-danger"></span>
            </div>

            <!-- CEO -->
            <div class="mb-3">
                <label asp-for="StudioCEO" class="form-label fw-semibold text-light">CEO</label>
                <input asp-for="StudioCEO" class="form-control shadow-sm"
                       style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;"
                       placeholder="Enter CEO name" />
                <span asp-validation-for="StudioCEO" class="text-danger"></span>
            </div>

            <!-- Headquarters -->
            <div class="mb-3">
                <label asp-for="StudioHeadquarter" class="form-label fw-semibold text-light">Headquarters</label>
                <input asp-for="StudioHeadquarter" class="form-control shadow-sm"
                       style="background: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;"
                       placeholder="Enter headquarters location" />
                <span asp-validation-for="StudioHeadquarter" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary px-4 py-2"
                        style="background: rgba(0, 255, 0, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); color: white;">
                    Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}